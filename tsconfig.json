{
  "compilerOptions": {
    "allowJs": true,
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "./app",
    "paths": {
      "@/*": ["*"],
      "@APP/*": ["app/*"],
      "@APP|Bundles/*": [
        "Bundles/App/*",
        "Bundles/Programs/*",
        "Bundles/Settings/*",
        "Bundles/UI/*",
        "Bundles/Window/*"
      ],
      "@APP|Views/*": ["Views/*"]
    }
  },
  "include": ["./src", "./core/tests/cypress", "./app"],
  "exclude": ["src/configs/*.config.js"]
}
