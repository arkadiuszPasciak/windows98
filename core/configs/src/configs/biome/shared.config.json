{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			".cache",
			"build",
			"dist",
			"node_modules",
			"test-results"
		]
	},
	"formatter": {
		"attributePosition": "multiline",
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}