{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/.cache",
			"!**/build",
			"!**/dist",
			"!**/node_modules",
			"!**/test-results"
		]
	},
	"formatter": {
		"attributePosition": "multiline",
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"formatWithErrors": true
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"semicolons": "asNeeded",
			"quoteStyle": "double"
		}
	}
}
