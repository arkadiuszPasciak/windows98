{
	"extends": [
		"@windows98/configs/typescript/cypress",
		"@windows98/configs/typescript/vue",
		"@windows98/configs/typescript/vite"
	],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["*"],
			"@APP/*": ["app/*"],
			"@APP|Bundles/*": [
				"Bundles/App/*",
				"Bundles/Programs/*",
				"Bundles/Settings/*",
				"Bundles/UI/*",
				"Bundles/Window/*"
			],
			"@APP|Views/*": ["Views/*"],
			"vue-i18n": ["./node_modules/vue-i18n/dist/vue-i18n.d.ts"]
		}
	},
	"include": ["./**/*", "./configs/cypress.config.d.ts"]
}
